@using DM.AbpZeroTemplate.DoorSystem

<div>
    <form name="deliverysForm" role="form" novalidate class="form-validation">
        <div class="modal-header">
            <h4 class="modal-title">
                <span ng-if="vm.delivery.Id">@L("Edit"):{{vm.delivery.name}}</span>
                <span ng-if="!vm.delivery.Id">@L("AddDelivery")</span>
            </h4>
        </div>

        <div class="modal-body">
            <div class="form-group">
                <label>@L("HomeOwerCommunity")</label>
                <select id="communitySelectedCombox"
                        class="form-control"
                        required
                        ng-class="{'edited':vm.delivery.communityId}"
                        name="CommunityId"
                        ng-model="vm.delivery.communityId"
                        ui-jq="selectpicker"
                        ui-options='{ iconBase: "famfamfam-flag", tickIcon: "fa fa-check" }'
                        data-live-search="true"
                        ng-options="community.id as community.name for community in vm.communityies"></select>
            </div>
            <div class="form-group">
                <label>@L("DeliveryContent")</label>
                <textarea ng-model="vm.delivery.content" name="Content" class="form-control"></textarea>
            </div>
        </div>

        <div class="modal-body" ng-if="vm.delivery.communityId">
            <div class="form-group form-md-line-input form-md-floating-label no-hint">
                <input auto-focus class="form-control" type="text" name="HomeOwerId" ng-class="{'edited':vm.delivery.homeOwerName}" ng-model="vm.delivery.homeOwerName"
                       ng-click="vm.selectHomeOwer()" />
                <label>@L("HomeOwerName")</label>
            </div>
        </div>

        <div class="modal-footer">
            <button ng-disabled="vm.saving" type="button" class="btn btn-default" ng-click="vm.cancel()">@L("Cancel")</button>
            <button type="submit" button-busy="vm.saving" busy-text="@L("SavingWithThreeDot")" class="btn btn-primary blue" ng-click="vm.save()" ng-disabled="deliverysForm.$invalid"><i class="fa fa-save"></i><span>@L("Save")</span></button>
        </div>
    </form>
</div>


