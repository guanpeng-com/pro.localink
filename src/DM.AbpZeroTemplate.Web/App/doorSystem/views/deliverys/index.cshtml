@using DM.AbpZeroTemplate.Localization
<div ng-controller="doorSystem.views.deliverys.index as vm">
    <div class="row margin-bottom-5">
        <div class="col-xs-12">
            <div class="page-head">
                <div class="page-title">
                    <h1>
                        <span>@L("Deliverys")</span>
                    </h1>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                    </div>
                    <div class="actions">
                    </div>
                </div>
                <div class="portlet-body">

                    <div class="form">
                        <form class="horizontal-form">
                            <div class="form-body" enter-key="vm.deliverys.load()">

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="control-label">@L("HomeOwerName")</label>
                                            <input type="text" class="form-control" name="HomeOwerName" ng-model="vm.requestParams.homeOwerName"/>
                                            
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="row margin-bottom-10">
                                <div class="col-sm-12 text-right">
                                    <button class="btn btn-default" ng-click="vm.deliverys.load()"><i class=" fa fa-refresh"></i> @L("Refresh")</button>
                                    <button ng-if="vm.permissions.createDeliverys" ng-click="vm.deliverys.addDelivery()" class="btn btn-default"><i class=" fa fa-create"></i> @L("AddDelivery")</button>
                                </div>
                            </div>

                        </form>
                    </div>

                    <div ng-if="vm.deliverys.gridOptions.data" ui-grid="vm.deliverys.gridOptions" ui-grid-pagination ui-grid-resize-columns dir=@(CultureHelper.IsRtl ? "rtl" : "")></div>
                    <div ng-if="!vm.deliverys.gridOptions.data" class="text-muted">
                        @L("NoTenantSelected")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

