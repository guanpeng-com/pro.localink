<div>
    <div class="modal-header">
        <h4 class="modal-title">
            <span>@L("ReportDetail")</span>
        </h4>
    </div>
    <div class="modal-body">
        <form class="form-horizontal audit-log-detail-view" role="form">
            <div class="form-body">
                <h3 class="form-section">@L("ReportDetail")</h3>
                <div class="row">
                    <div class="col-md-12">

                        <div class="form-group">
                            <label class="control-label col-sm-3">@L("ReportTitle"):</label>
                            <div class="col-sm-9">
                                <p class="form-control-static">
                                    {{vm.report.title}}
                                </p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3">@L("ReportContent"):</label>
                            <div class="col-sm-9">
                                <p class="form-control-static">
                                    {{vm.report.content}}
                                </p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3">@L("HomeOwerName"):</label>
                            <div class="col-sm-9">
                                <p class="form-control-static">
                                    {{vm.report.homeOwerName}}
                                </p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3">@L("ReportFiles"):</label>
                            <div class="col-sm-9">
                                <p class="form-control-static" ng-repeat="file in vm.report.fileArray">
                                    <a href="{{file}}" target="_blank">{{file}}</a>
                                </p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3">@L("ReportStatus"):</label>
                            <div class="col-sm-9">
                                <p class="form-control-static">
                                    {{vm.report.status}}
                                </p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" ng-click="vm.close()">@L("Close")</button>
    </div>
</div>


