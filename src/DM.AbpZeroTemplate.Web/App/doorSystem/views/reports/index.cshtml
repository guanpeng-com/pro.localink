@using DM.AbpZeroTemplate.Localization
<div ng-controller="doorSystem.views.reports.index as vm">
    <div class="row margin-bottom-5">
        <div class="col-xs-12">
            <div class="page-head">
                <div class="page-title">
                    <h1>
                        <span>@L("Reports")</span>
                    </h1>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                    </div>
                    <div class="actions">
                        <a ng-if="vm.permissions.createReports" ng-click="vm.reports.addReport()" class="btn btn-circle btn-default">
                            <i class="fa fa-plus"></i> @L("AddReport")
                        </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div ng-if="vm.reports.gridOptions.data" ui-grid="vm.reports.gridOptions" ui-grid-pagination ui-grid-resize-columns dir=@(CultureHelper.IsRtl ? "rtl" : "")></div>
                    <div ng-if="!vm.reports.gridOptions.data" class="text-muted">
                        @L("NoTenantSelected")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

