@using DM.AbpZeroTemplate.Localization
<div ng-controller="doorSystem.views.messages.index as vm">
    <div class="row margin-bottom-5">
        <div class="col-xs-12">
            <div class="page-head">
                <div class="page-title">
                    <h1>
                        <span>@L("Messages")</span>
                    </h1>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                    </div>
                    <div class="actions">

                    </div>
                </div>
                <div class="portlet-body">


                    <div class="form">
                        <form class="horizontal-form">
                            <div class="form-body" enter-key="vm.messages.load()">

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="control-label">@L("MessageIsPublic")</label>
                                            <select class="form-control" ng-model="vm.requestParams.isPublic">
                                                <option value="">@L("All")</option>
                                                <option value="true">@L("True")</option>
                                                <option value="false">@L("False")</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="row margin-bottom-10">
                                <div class="col-sm-12 text-right">
                                    <button class="btn btn-default" ng-click="vm.messages.load()"><i class=" fa fa-refresh"></i> @L("Refresh")</button>
                                    <button ng-if="vm.permissions.createMessages" class="btn btn-default" ng-click="vm.messages.addMessage()"><i class=" fa fa-create"></i> @L("AddMessage")</button>
                                </div>
                            </div>

                        </form>
                    </div>

                    <div ng-if="vm.messages.gridOptions.data" ui-grid="vm.messages.gridOptions" ui-grid-pagination ui-grid-resize-columns dir=@(CultureHelper.IsRtl ? "rtl" : "")></div>
                    <div ng-if="!vm.messages.gridOptions.data" class="text-muted">
                        @L("NoTenantSelected")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

