<div>
    <div class="modal-header">
        <h4 class="modal-title">
            <span>@L("MessageDetail")</span>
        </h4>
    </div>
    <div class="modal-body">
        <form class="form-horizontal audit-log-detail-view" role="form">
            <div class="form-body">
                <h3 class="form-section">@L("MessageDetail")</h3>
                <div class="row">
                    <div class="col-md-12">

                        <div class="form-group">
                            <label class="control-label col-sm-3">@L("MessageTitle"):</label>
                            <div class="col-sm-9">
                                <p class="form-control-static">
                                    {{vm.message.title}}
                                </p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3">@L("MessageContent"):</label>
                            <div class="col-sm-9">
                                <p class="form-control-static">
                                    {{vm.message.content}}
                                </p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3">@L("HomeOwerName"):</label>
                            <div class="col-sm-9">
                                <p class="form-control-static">
                                    {{vm.message.homeOwerName}}
                                </p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3">@L("MessageIsRead"):</label>
                            <div class="col-sm-9">
                                <p class="form-control-static">
                                    {{vm.message.isRead}}
                                </p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3">@L("MessageIsPublic"):</label>
                            <div class="col-sm-9">
                                <p class="form-control-static">
                                    {{vm.message.isPublic}}
                                </p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" ng-click="vm.close()">@L("Close")</button>
    </div>
</div>


