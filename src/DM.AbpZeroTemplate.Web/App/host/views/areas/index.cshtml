<div ng-controller="host.views.areas.index as vm">
    <div class="row margin-bottom-5">
        <div class="col-xs-12">
            <div class="page-head">
                <div class="page-title">
                    <h1>
                        <span>@L("Areas")</span><small>@L("AreasHeaderInfo")</small>
                    </h1>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                        <span class="caption-subject bold uppercase">
                            @L("AreaTree")
                        </span>
                    </div>
                    <div class="actions">
                        <a ng-if="vm.permissions.createAreaTree" ng-click="vm.areaTree.addArea(null)" class="btn btn-circle btn-default">
                            <i class="fa fa-plus"></i>@L("AddRootArea")
                        </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div id="AreaEditTree"></div>
                    <div ng-if="!vm.areaTree.areaCount" class="text-muted">
                        @L("NoAreaDefinedYet")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
